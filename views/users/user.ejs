<%- include("../partials/header"); %>
<div class="card">
    <div class="row no-gutters">
      <div class="col-md-5">
        <img src="<%= userData.image %>" class="card-img" alt="test" style="width: 400px;height: 420px;">
      </div>
      <div class="col-md-7">
        <div class="card-body">
          <h5 class="card-title"><%= userData.name %></h5>
          <p class="card-text"><%= userData.email %></p>
          <% if(user.id === userData.id){ %> 
          <p class="card-text">
              <a href="/users/<%= userData.id %>/edit" class="btn btn-primary">Edit</a>
          </p>
          <% } %> 
        </div>
      </div>
    </div>
</div>
<div class="card mt-3">
  <h5 class="card-header">評論過  <strong><%= commentsNum %> </strong> 間餐廳</h5>
  <div class="card-body d-flex">
    <% userData.Comments.forEach(comments=>{ %> 
      <a href="/restaurants/<%= comments.Restaurant.id %>" class="mr-4">
        <img src="<%= comments.Restaurant.image %>" class="card-img" alt="test" style="width: 80px;height: 80px;">
      </a>
    <% }) %> 
  </div>
</div>
<%- include("../partials/footer"); %> 