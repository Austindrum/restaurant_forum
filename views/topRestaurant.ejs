<%- include("./partials/header"); %>

<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link" href="/restaurants">首頁</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/restaurants/feeds">最新動態</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/restaurants/top">TOP10 人氣餐廳</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/users/top">美食達人</a>
    </li>
</ul>
<br /><br />
<h1>TOP10 人氣餐廳</h1>
<hr />
<% topRestaurants.forEach(topRestaurant=>{ %> 
<div class="mb-3">
    <div class="card m-auto" style="max-width: 540px;">
        <div class="row no-gutters">
        <div class="col-md-4">
            <img src="<%= topRestaurant.image %>" class="card-img" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
            <h5 class="card-title">
                <a href="/restaurants/<%= topRestaurant.id %>"><%= topRestaurant.name %></a>
            </h5>
            <span class="badge badge-secondary">收藏數 <strong><%= topRestaurant.favoritedUsers %></strong></span>
            <p class="card-text">
                <%= topRestaurant.description %>
            </p>
            <!--  -->
            <% if(topRestaurant.isFavorited){ %> 
            <form action="/favorite/<%= topRestaurant.id %>?_method=DELETE" method="POST" class="mr-2">
                <button type="submit" class="btn btn-danger btn-sm">移除最愛</button>
            </form>
            <% }else{ %>
            <form action="/favorite/<%= topRestaurant.id %>" method="POST" class="mr-2">
                <button type="submit" class="btn btn-primary btn-sm">加到最愛</button>
            </form>
            <% } %> 
            </div>
        </div>
        </div>
    </div>
</div>
<% }) %> 

<%- include("./partials/footer"); %> 