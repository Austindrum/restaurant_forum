<%- include("./partials/header"); %> 
<ul class="nav nav-tabs mb-3">
    <li class="nav-item">
        <a class="nav-link" href="/restaurants">首頁</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="/restaurants/feeds">最新動態</a>
    </li>
</ul>
<br /><br />
<h1>最新動態</h1>
<hr />
<div class="row">
<div class="col-md-6">
    <div class="card">
    <div class="card-header">
        最新餐廳
    </div>
    <div class="card-body">
        <% restaurantsData.forEach(restaurant=>{ %> 
        <div>
            <h4>
            <a href="/restaurants/<%= restaurant.id %> "><%= restaurant.name %></a>
            <small><%= restaurant.Category.name %></small>
            </h4>
            <p><%= restaurant.description %></p>
            <%= restaurant.createdAt  %> 
            <hr>
        </div>
        <% }) %>
    </div>
    </div>
</div>
<div class="col-md-6">
    <div class="card">
    <div class="card-header">
        最新評論
    </div>
    <div class="card-body">
        <% commentsData.forEach(comment=>{ %> 
        <div>
            <h4>
            <a href="/restaurants/<%= comment.Restaurant.id %>"><%= comment.Restaurant.name %></a>
            </h4>
            <p><%= comment.text %> </p>
            by <a href="/users/<%= comment.User.id %>"><%= comment.User.name %></a>
            at <%= comment.createdAt %> 
            <hr>
        </div>
        <% }) %> 
    </div>
    </div>
</div>
</div>
<%- include("./partials/footer"); %> 