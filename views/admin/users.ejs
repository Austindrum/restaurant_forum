<%- include("../partials/header"); %> 
<h1>餐廳後台</h1>
<a href='/admin/restaurants'>Restaurant</a> || 
<a href='/admin/categories'>Category</a> || 
<a href="/admin/users">Users</a>
<br/>
<br/>
<a href='/admin/restaurants/create' class="btn btn-primary">New Restaurant</a>
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
  <form action="/admin/categories" method="POST">
    <input type="text" placeholder="類別名稱" name="name">
    <button type="submit">Submit</button>
  </form>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %> 
    <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.email %></td>
        <td><%= user.isAdmin ? "Admin" : "User" %></td>
        <td>
            <% if(user.email === "root@example.com"){ %>
                <span class="ml-3">Root User</span> 
            <% }else{ %> 
                <form action="/admin/users/<%= user.id %>?_method=PUT" method="POST">
                    <button type="submit" class="btn btn-link">
                        <%= user.isAdmin ? "Set as User" : "Set as Admin" %>
                    </button>
                </form>
            <% } %> 
        </td>
    </tr>
    <% }) %> 
  </tbody>
</table>
<%- include("../partials/footer"); %> 