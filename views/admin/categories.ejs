<%- include("../partials/header"); %> 
<h1>餐廳後台</h1>
<a href='/admin/restaurants'>Restaurant</a> || 
<a href='/admin/categories'>Category</a> || 
<a href="/admin/users">Users</a>
<br />
<br />
<a href='/admin/restaurants/create' class="btn btn-primary">New Restaurant</a>
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
  <% if(category !== null){ %> 
    <% category.forEach(item=>{ %> 
      <form action="/admin/categories/<%= item.id %>?_method=PUT" method="POST">
          <input type="text" placeholder="類別名稱" name="name" value="<%= item.name %> ">
          <button type="submit">Submit</button>
          <a href="/admin/categories"> or Create New One</a>
      </form>
    <% }) %> 
    <% }else{ %>
      <form action="/admin/categories" method="POST">
        <input type="text" placeholder="類別名稱" name="name">
        <button type="submit">Submit</button>
      </form>
    <% } %>
</div>
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
      <% categories.forEach(category=>{ %> 
      <tr>
        <th scope="row"><%= category.id %></th>
        <td><%= category.name %></td>
        <td>
          <button type="button" class="btn btn-link">
            <a href="/admin/categories/<%= category.id %>">
              Edit
            </a>
          </button>
          <form action="/admin/categories/<%= category.id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-link">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %> 
  </tbody>
</table>
<br />
<br />
<%- include("../partials/footer"); %> 